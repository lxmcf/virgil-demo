{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile Project",
            "type": "shell",
            "command": "meson build/meson && ninja -C build/meson",
            "problemMatcher": "$valac",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Clean Build Environment",
            "type": "shell",
            "command": "rm -rf build/*",
            "problemMatcher": []
        },
        {
            "label": "Run Project",
            "type": "shell",
            "command": "build/meson/virgil-demo",
            "problemMatcher": []
        },
        {
            "label": "Build flatpak",
            "type": "shell",
            "command": "flatpak-builder --user --install build/flatpak build-aux/flatpak/com.github.lxmcf.virgil-demo.json --force-clean",
            "problemMatcher": []
        },
        {
            "label": "Run flatpak",
            "type": "shell",
            "command": "flatpak run com.github.lxmcf.virgil-demo",
            "problemMatcher": []
        }
    ]
}
