{
    "app-id": "com.github.lxmcf.virgil-demo",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.38",
    "sdk": "org.gnome.Sdk",
    "command": "virgil-demo",
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/lib/debug",
        "/share/vala",
        "/man",
        "*.a",
        "*.la"
    ],
    "finish-args": [
        "--socket=fallback-x11",
        "--socket=pulseaudio",
        "--socket=wayland",
        "--device=dri",
        "--filesystem=host"
    ],
    "modules": [
        {
            "name": "virgil",
            "buildsystem": "meson",
            "config-opts": [
                "--default-library=static",

                "-Dbuild_type=flatpak",
                "-Dprofile=development"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "../../../virgil"
                }
            ]
        },
        {
            "name": "virgil-demo",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "dir",
                    "path": "../../"
                }
            ]
        }
    ]
}
